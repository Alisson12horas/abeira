<!-- TÍTULO -->
<div class="row">
  <div class="large-12 columns main-content-top">
    <h2>Agenda</h2>
  </div>
</div>
<!-- FIM TÍTULO -->
<br>
<div class="row">
  <div class="large-12 columns">
    <p id="notice"><%= notice %></p>
    <h1><%= @agenda.titulo %></h1>
    <h3><%= @agenda.data.strftime("%d/%m/%Y") %></h3>
    <p><%= raw(@agenda.texto) %><br></p>

    <!-- admin only -->
    <%= link_to 'Voltar', agendas_path %> |
    <%= link_to 'Editar', edit_agenda_path(@agenda) %> |
    <%= link_to 'Deletar', @agenda, method: :delete, data: { confirm: 'Tem certeza?' } %>
    <!-- admin only -->

    <br><br><br>
  </div>
</div>